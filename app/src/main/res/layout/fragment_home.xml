<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiantbackground"
    tools:context=".ui.home.HomeFragment">

    <EditText
        android:inputType="text"
        android:id="@+id/et_game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/nom_de_la_partie"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:inputType="textPersonName"
        android:id="@+id/et_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/nom_du_joueur"
        app:layout_constraintTop_toBottomOf="@id/et_game_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:inputType="textPersonName"
        android:id="@+id/et_game_master_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/nom_du_ma_tre_de_jeu"
        app:layout_constraintTop_toBottomOf="@id/et_player_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/sp_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_game_master_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/btn_new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cr_er_une_nouvelle_partie"
        app:layout_constraintTop_toBottomOf="@id/sp_difficulty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black_light"
        />

</androidx.constraintlayout.widget.ConstraintLayout>